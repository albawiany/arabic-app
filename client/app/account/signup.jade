div(ng-include='"components/navbar/navbar.html"')
.signup-page-container
      form(name='form', ng-submit='register(form)', novalidate='')
        .form-group(ng-class='{ "has-success": form.name.$valid && submitted,\
        "has-error": form.name.$invalid && submitted }')
          label Username
          input(type='text', name='name', ng-model='user.name', required='')
          p(ng-show='form.name.$error.required && submitted')
            | A name is required
        .form-group(ng-class='{ "has-success": form.email.$valid && submitted,\
        "has-error": form.email.$invalid && submitted }')
          label Email
          input(type='email', name='email', ng-model='user.email', required='', mongoose-error='')
          p(ng-show='form.email.$error.email && submitted')
            | Doesn't look like a valid email.
          p(ng-show='form.email.$error.required && submitted')
            | What's your email address?
          p(ng-show='form.email.$error.mongoose')
            | {{ errors.email }}
        .form-group(ng-class='{ "has-success": form.password.$valid && submitted,\
        "has-error": form.password.$invalid && submitted }')
          label Password
          input(type='password', name='password', ng-model='user.password', ng-minlength='3', required='', mongoose-error='')
          p(ng-show='(form.password.$error.minlength || form.password.$error.required) && submitted')
            | Password must be at least 3 characters.
          p(ng-show='form.password.$error.mongoose')
            | {{ errors.password }}
        .button-container
          button(type='submit') Sign up
          button(type='submit',ng-click='redirectToLogin()') Login


