div(ng-include='"components/navbar/navbar.html"')
.login-page-container
  form(name='form',ng-submit='login(form)', novalidate='')
      .login-page-body
        .input-text-group
          .fa.fa-envelope.fa-4x
          input(type='text', name='email', ng-model='user.email', placeholder='email')
        .input-text-group
          .fa.fa-lock.fa-5x
          input(type='password', name='password', ng-model='user.password', placeholder='password')
        .error-box.center-block
          p(ng-show='form.email.$error.required && form.password.$error.required && submitted')
            | Please enter your email and password
          p.fa.fa-thumbs-o-down(ng-show="errors.other") {{"   " + errors.other }}
        .input-button-group
          button.btn-primary.center-block(type='submit') Login

